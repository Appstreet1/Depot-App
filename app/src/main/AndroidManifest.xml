<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.depotapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DepotApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DepotApp">
        <activity android:name=".ui.addshare.AddShareActivity" />
        <activity android:name=".ui.saveplan.SavePlanActivity" />
        <activity android:name=".ui.selectoption.SelectOptionActivity" />
        <activity android:name=".ui.depotoverview.DepotOverviewActivity" />
        <activity android:name=".ui.adddepot.AddDepotActivity" />
        <activity android:name=".ui.selectdepot.SelectDepotActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
    </application>

</manifest>